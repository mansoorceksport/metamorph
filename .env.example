# Server Configuration
PORT=8080
MAX_UPLOAD_SIZE_MB=5

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=homgym

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=

# Firebase Configuration
# Get these from your Firebase project settings (Service Accounts > Generate new private key)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=base64_encoded_private_key_here
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# OpenRouter Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Available Gemini models:
# - google/gemini-2.0-flash-001 (Newer & Valid) - RECOMMENDED
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRATION_MINUTES=15
JWT_ACCESS_TOKEN_EXPIRY=1m # 1m | 15m | 1h | 4h | 1d | 1w | 1M | 1y

# S3 Configuration (SeaweedFS)
# Note: SeaweedFS S3 API defaults to port 8333
S3_ENDPOINT=http://localhost:8333
S3_REGION=us-east-1
S3_BUCKET=inbody-scans

# OpenTelemetry / Grafana Cloud Configuration
# Enable tracing and metrics (set to true in production)
OTEL_ENABLED=false
# Grafana Cloud OTLP endpoint (without https:// prefix)
OTEL_EXPORTER_OTLP_ENDPOINT=otlp-gateway-prod-ap-southeast-2.grafana.net
# Grafana Cloud Instance ID (from stack name, e.g., 1491795)
OTEL_INSTANCE_ID=your_instance_id_here
# Grafana Cloud API token (glc_... format)
OTEL_EXPORTER_OTLP_TOKEN=your_grafana_cloud_token_here
# Service identification
OTEL_SERVICE_NAME=metamorph-api
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development
